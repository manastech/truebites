= form_for @argument do |f|
  - if editing
    .field
      = f.text_field :title, placeholder: 'Argument title'
    .field
      = f.label :description
      = f.text_area :description
  - else
    %h2=@argument.title
    %h3
      Started by
      =@argument.author.name
    %p=@argument.description
  = react_component 'Argument', versions: argument_versions(@argument), currentUser: current_user.id
